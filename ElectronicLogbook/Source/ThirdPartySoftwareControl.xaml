<UserControl x:Class="ElectronicLogbook.ThirdPartySoftwareControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <DockPanel DataContext="{Binding mThirdPartySoftwareListViewModel}" >
        <ListView ItemsSource="{Binding }" >
            <ListView.View>
                <GridView >
                    <GridViewColumn Header="Software Name" DisplayMemberBinding="{Binding mSoftwareName}" Width="Auto" />
                    <GridViewColumn Header="Software Version Number" DisplayMemberBinding="{Binding mSoftwareVersionNumber}" Width="Auto" />
                    <GridViewColumn Header="Software Location" DisplayMemberBinding="{Binding mSoftwareLocation}" Width="Auto" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</UserControl>
